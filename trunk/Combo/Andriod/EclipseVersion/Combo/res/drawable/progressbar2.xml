<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:endColor="#3300ff00"
                android:gradientRadius="200"
                android:startColor="#33005500"
                android:type="linear" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="#ffff9900"
                    android:startColor="#ffff0099" />
            </shape>
        </clip>
    </item>

</layer-list>